{
    "_metadata": {
        "major_version": 1,
        "minor_version": 1
    },
    "display_information": {
        "name": "slack-birthday-bot"
    },
    "features": {
        "app_home": {
            "home_tab_enabled": true,
            "messages_tab_enabled": false,
            "messages_tab_read_only_enabled": true
        },
        "bot_user": {
            "display_name": "slack-birthday-bot",
            "always_online": false
        },
        "shortcuts": [
            {
                "name": "Run sample shortcut",
                "type": "global",
                "callback_id": "sample_shortcut_id",
                "description": "Runs a sample shortcut"
            }
        ],
        "slash_commands": [
            {
                "command": "/sample-command",
                "description": "Runs a sample command",
                "should_escape": false
            },
            {
                "command": "/setbirthday",
                "description": "Set your birthday (DD/MM format)",
                "should_escape": false
            },
            {
                "command": "/birthdaychannel",
                "description": "Set the channel for birthday announcements",
                "should_escape": false
            },
            {
                "command": "/listbirthdays",
                "description": "Show all saved birthdays",
                "should_escape": false
            },
            {
                "command": "/nextbirthdays",
                "description": "Show upcoming birthdays",
                "should_escape": false
            },
            {
                "command": "/removebirthday",
                "description": "Remove your birthday from the system",
                "should_escape": false
            },
            {
                "command": "/debugcheckbirthdays",
                "description": "Debug: Manually trigger birthday check",
                "should_escape": false
            },
            {
                "command": "/debugsettoday",
                "description": "Debug: Set your birthday to today for testing",
                "should_escape": false
            },
            {
                "command": "/setname",
                "description": "Set your display name for birthday messages",
                "should_escape": false
            },
            {
                "command": "/adminsetbirthday",
                "description": "Admin: Set a birthday for another user",
                "should_escape": false
            },
            {
                "command": "/adminlistbirthdays",
                "description": "Admin: Get detailed list of all birthdays",
                "should_escape": false
            },
            {
                "command": "/adminremovebirthday",
                "description": "Admin: Remove a birthday for another user",
                "should_escape": false
            },
            {
                "command": "/adminimportbirthdays",
                "description": "Admin: Import multiple birthdays from CSV",
                "should_escape": false
            },
            {
                "command": "/manageadmins",
                "description": "Admin: Manage who has admin privileges",
                "should_escape": false
            },
            {
                "command": "/adminbulkremove",
                "description": "Admin: Remove birthdays for multiple users at once",
                "should_escape": false
            },
            {
                "command": "/csvtemplate",
                "description": "Get a CSV template for importing birthdays",
                "should_escape": false
            },
            {
                "command": "/validatecsv",
                "description": "Admin: Validate CSV data before importing",
                "should_escape": false
            }
        ]
    },
    "oauth_config": {
        "scopes": {
            "bot": [
                "channels:history",
                "channels:read",
                "chat:write",
                "commands",
                "groups:read",
                "users:read"
            ]
        }
    },
    "settings": {
        "event_subscriptions": {
            "bot_events": [
                "app_home_opened",
                "message.channels"
            ]
        },
        "interactivity": {
            "is_enabled": true
        },
        "org_deploy_enabled": false,
        "socket_mode_enabled": true,
        "token_rotation_enabled": false
    }
}